<div id="movie_admin_modal" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="movieAdminModalLabel" aria-hidden="true" data-bind="with: $root.selected_movie">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="movieAdminModalLabel" class="modal-title" data-bind="text: title() + ' - Admin'"></h4>
      </div>
      <div class="modal-body">
        <span>Fandango ID: </span><input data-bind="value: fandango_id" />
        <hr/>
        Trivia Questions
        <br/>
        <button class="btn btn-default" data-bind="click: addTriviaQuestion">Add Question</button><br/><br/>
        <!-- ko foreach: trivia_questions -->
          Question Text: <textarea data-bind="value: question_text"></textarea><br/>
          <button class="btn btn-default" data-bind="click: addAnswerChoice">Add Answer</button><br/><br/>
          <!-- ko foreach: answer_choices -->
          <span data-bind="text: $index() + ') '"></span><input data-bind="value: $data" />
          <!-- /ko  -->
        <hr/>
        <!-- /ko  -->
        <br/>
        <button class="btn btn-default" data-bind="click: saveAdminChanges">Save</button>
      </div>
    </div>
  </div>
</div>
