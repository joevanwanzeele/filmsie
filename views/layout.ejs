  <body>
      <div id="fb-root"></div>
      <script>
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=248849825312110&version=v2.0";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
      </script>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"> Filmsie</a>
        </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if (session.authenticated) { %>
            <li class="active"><a href="/user/show/<%= session.User.id %>"><%= session.User.firstName %> </a> </li>
            <li><a href="/saleItem/">Buy Something</a></li>
            <li><a href="/saleItem/new/">Sell Something</a></li>
            <% } %>
            <% if (session.authenticated && session.User.admin) { %>
            <li><a href="/user">User Administration</a></li>

          <% } %>
        </ul>
        <div class="navbar-right">
          <% if (session.authenticated) { %>
            <a class="btn btn-default navbar-btn navbar-right" href="/user/logout">sign-out</a>
          <% } %>
        </div>
        <% if (!session.authenticated) { %>
          <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="true">
          </div>
        <% } %>
        </div>
      </div>
      </div>
    </nav>

    <%- body %>

    <div class="container">
      <hr>
      <footer class="footer pull-right">
        <div>
          <a href="/about">About Us</a>
          <div>Copyright Filmsie LLC, 2014</div>
        </div>
      </footer>
    </div>



